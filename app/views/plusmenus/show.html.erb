<h3>プラスで簡単スイーツ</h3>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">

      <thead class="thead-light">
        <tr>
          <th>料理名</th>
          <th>材料</th>
          <th>時間</th>
          <th>リンク</th>
        </tr>
      </thead>

      <tbody>
        選択中の材料→<%= @target_ingredient.name %>
        <% @target_recipes.each do |recipe| %>
          <tr>
            <td><%= recipe.title %></td>
            <td>
              <% @recipes.each do |ingredient| %>
                <%= ingredient.name %>
              <% end %>
            </td>
            <td><%= recipe.time %>分</td>
            <td><%=link_to "リンク"%></td>
          </tr>

        
        <% end %>

        
        
      </tbody>
    </table>
  </div>
</div>