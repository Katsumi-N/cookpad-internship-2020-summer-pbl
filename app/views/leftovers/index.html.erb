<h3>スイーツ作りで余りがちな食材</h3>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">

      <thead class="thead-light">
        <tr>
          <th>食材</th>
          <th>レシピ</th>
        </tr>
      </thead>

      <tbody>
        <% @leftovers.each do |ingredient| %>
          <tr>
            <td><%= ingredient.name %></td>
            <td><%=link_to "→簡単消費レシピ", plusmenu_path(ingredient.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
