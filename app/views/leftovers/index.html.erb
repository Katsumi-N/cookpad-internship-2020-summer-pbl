<h3>スイーツ作りで余りがちな食材</h3>
<div class="search-form">
  <%= search_form_for @search, url: leftovers_path do |f|%>
    <%= f.label :name_cont, '材料名' %>
    <%= f.search_field :name_cont %>
    <%= f.submit %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">

      <thead class="thead-light">
        <tr>
          <th>食材</th>
          <th>レシピ</th>
        </tr>
      </thead>

      <tbody>
        <% @leftovers.each do |ingredient| %>
          <tr>
            <td><%= ingredient.name %></td>
            <td><%=link_to "→簡単消費レシピ", plusmenu_path(ingredient.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
